{
    "entities": {
        "user": {
            "title": "User",
            "description": "A user of the application.",
            "type": "object",
            "properties": {
                "uid": {
                    "type": "string",
                    "description": "The user's unique ID."
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                },
                "displayName": {
                    "type": "string",
                    "description": "The user's display name."
                }
            },
            "required": [
                "uid",
                "email"
            ]
        },
        "station": {
            "title": "Station",
            "description": "A radio station.",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "streamUrl": {
                    "type": "string"
                },
                "logoUrl": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "name",
                "streamUrl"
            ]
        },
        "slider": {
            "title": "Slider",
            "description": "An image for the ad slider.",
            "type": "object",
            "properties": {
                "src": {
                    "type": "string"
                },
                "alt": {
                    "type": "string"
                },
                "dataAiHint": {
                    "type": "string"
                },
                "linkUrl": {
                    "type": "string"
                },
                "order": {
                    "type": "number"
                }
            },
            "required": [
                "src",
                "alt",
                "linkUrl",
                "order"
            ]
        }
    },
    "auth": {
        "providers": [
            "email-password"
        ]
    },
    "firestore": {
        "/stations": {
            "schema": {
                "$ref": "#/entities/station"
            },
            "description": "Collection of all radio stations."
        },
        "/users/{userId}": {
            "schema": {
                "$ref": "#/entities/user"
            },
            "description": "User profile information."
        },
        "/sliders": {
            "schema": {
                "$ref": "#/entities/slider"
            },
            "description": "Collection of all slider images."
        }
    }
}
